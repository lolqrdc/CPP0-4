# NAME 
NAME = phoneBook

# FLAGS
CC = c++
CFLAGS = -Wall -Wextra -Werror -std=c++98
RM = rm -f

# FOLDER
OBJ_DIR = obj

# SOURCES
SRCS = phoneBook.cpp

OBJS = $(SRCS:%.cpp=$(OBJ_DIR)/%.o)

# RULES
all: $(NAME)

$(NAME): $(OBJS)
	@echo "Linking $(NAME)..."
	$(CC) $(CFLAGS) $(OBJS) -o $(NAME)
	@echo "Compilation termin√©e."

$(OBJ_DIR)/%.o: %.cpp
	@mkdir -p $(OBJ_DIR)
	$(CC) $(CFLAGS) -c $< -o $@

clean:
	$(RM) -r $(OBJ_DIR)

fclean: clean
	$(RM) $(NAME)

re: fclean all

.PHONY: all clean fclean re